
<%= simple_form_for([@album,@album.photos.build]) do |f| %>
  <%= f.error_notification %>
  <div class="form-image">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <br>
  <br>
  <div class="form-inputs">
    <%= f.input :caption %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
