
<br>
<h1>Albums</h1>
<br>
<table>
  <thead>
    <tr>
      <th <p>Name</p> </th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= link_to 'Show', "/albums/#{album.id}" %></td>
        <td><%= link_to 'Edit',  "/albums/#{album.id}/edit" %></td>
        <td><%= link_to 'Delete', "/albums/#{album.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_url %>
<%= link_to 'Back', posts_path %>
